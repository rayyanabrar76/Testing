<html>
<head>
  <meta charset="utf-8">
  <title>LinkedIn Feeling Lucky</title>
  <style>
    body {
      font-family: Arial;
      text-align: center;
      margin-top: 150px;
    }
    input, button {
      padding: 10px;
      font-size: 16px;
      margin: 5px;
    }
    input { width: 250px; }
  </style>
</head>
<body>
  <h1>LinkedIn Feeling Lucky üçÄ</h1>
  <input type="text" id="query" placeholder="Type name or keyword..." required>
  <button id="goBtn">Go</button>

  <script>
    document.getElementById('goBtn').addEventListener('click', function(){
      const q = document.getElementById('query').value.trim();
      if(!q) return;

      // DuckDuckGo search URL with LinkedIn bang
      const url = `https://duckduckgo.com/lite/?q=!li+${encodeURIComponent(q)}`;

      // Open the search page in a new tab to parse results
      window.open(url, '_blank');
    });
  </script>
</body>
</html>
